<div class="row mt-5 mx-5 text-center">
  <h1>Edit Contact</h1>
</div>
<div class="d-flex justify-content-center">
  <div
  class="col col-8 col-lg-6 px-3 my-5 bg-body-tertiary rounded-3 text-bg-dark rounded-3shadow-lg"
  data-bs-theme="dark"
  >
      <div id="contentArea" class="pt-5 px-2">
        <form class="">
          <div class="input-group mb-3">
            <span id="emailLabel" class="input-group-text">Email Address:</span>
            <input
              id="emailAddress"
              name="emailAddress"
              type="email"
              class="form-control"
              aria-labelledby="emailLabel"
              aria-describedby="Email Address Input"
              required
            />
          </div>

          <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
          </div>

          <div class="input-group mb-3 mt-3">
            <span id="fullNameLabel" class="input-group-text">Full Name:</span>
            <input
              id="fullName"
              name="fullName"
              type="text"
              class="form-control"
              aria-labelledby="fullNameLabel"
              aria-describedby="Full Name Input"
              required
            />
          </div>
          <div class="input-group mb-3 mt-3">
            <span id="phoneNumberLabel" class="input-group-text">Phone Number:</span>
            <input
              id="contactNumber"
              name="contactNumber"
              type="tel"
              class="form-control"
              aria-labelledby="phoneNumberLabel"
              aria-describedby="Phone Number Input"
              required
            />
          </div>

          <div class="input-group mb-3 mt-3">
            <span id="messageLabel" class="input-group-text">Message</span>
            <textarea name="message" id="messsage" class="form-control" aria-labelledby="messageLabel" aria-describedby="Message Input">

            </textarea>
          </div>

          <div class="form-check mb-3 mt-3">
            <input name="subscribeCheckbox" id="subscribeCheckbox" type="checkbox" class="form-check-input" aria-labelledby="subscribeLabel" aria-describedby="Subscription Checkbox">
            <label id="subscribeLabel" for="subscribeCheckbox">Subscribe to our Contact List</label>
            </input>
          </div>

          <div class="mb-4">
            <button id="submitForm" type="submit" class="btn btn-primary me-2"><i class="fas fa-envelope fa-lg"></i> Submit</button>
            <button id="resetForm" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</button>
          </div>
        </form>
        <div id="messageArea"></div>
      </div>
    </div>
  </div>